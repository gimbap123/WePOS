<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	 
<mapper namespace="com.wepos.common.dao.CommonDao">

	<select id="findId" parameterType="usersDto" resultType="String">
		select user_id from users where user_name = #{userName} and user_email = #{userEmail}
	</select>
	
	<insert id="registration" parameterType="usersDto">
		insert into users values(#{userId},1,#{userPassword},#{userName},#{userPhone},#{userEmail},0)
	</insert>
	
	<select id="checkIdFromUsers" parameterType="String" resultType="int">
		select count(*) from users where user_id = #{userId}
	</select>
	
	<select id="checkIdFromMgr" parameterType="String" resultType="int">
		select count(*) from mgr where mgr_id=#{mgrId}
	</select>
	
	<select id="checkIdFromDeletedId" parameterType="String" resultType="int">
		select count(*) from deleted_id where id=#{deletedId}
	</select>

	<select id="findPw" parameterType="usersDto" resultType="int">
		select count(*) from users where user_id = #{userId} and user_email = #{userEmail}
	</select>
	
	<update id="updatePw" parameterType="usersDto">
		update users set user_password = #{userPassword} where user_id = #{userId}
	</update>
	
	<select id="userLogin" parameterType="map" resultType="int">
		select count(*) from users where user_id = #{id} and user_password = #{password}
	</select>
	
	<select id="mgrLogin" parameterType="map" resultType="int">
		select count(*) from mgr where mgr_id = #{id} and mgr_password = #{password}	
	</select>
	
	<insert id="userLoginLog" parameterType="userLoginDto">
		insert into user_login values(#{userId}, sysdate, #{userLoginState})
	</insert>
	
	<insert id="mgrLoginLog" parameterType="mgrLoginDto">
		insert into mgr_login values(#{mgrId}, sysdate, #{mgrLoginState})
	</insert>
	
	<select id="showUserInfo" parameterType="usersDto" resultType="usersDto">
		select * from users where user_id=#{userId}
	</select>
	
	<update id="updateUserInfo" parameterType="usersDto">
		update users set user_password=#{userPassword},user_phone=#{userPhone},user_email=#{userEmail} where user_id=#{userId}
	</update>
	
	<delete id="deleteUserInfoFromUserLogin" parameterType="String">
		delete from user_login where user_id=#{userId}
	</delete>
	
	<delete id="deleteUserInfoFromUsers" parameterType="String">
		delete from users where user_id=#{userId}
	</delete>
	
	<delete id="deleteUserInfoFromMgrLogin" parameterType="String">
		delete from mgr_login where mgr_id=#{mgrId}
	</delete>
	
	<delete id="deleteUserInfoFromMgr" parameterType="String">
		delete from mgr where mgr_id=#{mgrId}
	</delete>
	
	<insert id="deletedId" parameterType="String">
		insert into deleted_id values(#{userId})
	</insert>

</mapper>